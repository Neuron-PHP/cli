    "description": "Unified command-line interface for the Neuron PHP framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lee Jones",
            "email": "lee@dragonflyrg.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
